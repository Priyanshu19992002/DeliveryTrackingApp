    <header class="mb-auto">
        <div>
            <h3 class="float-md-left mb-0" style="color: #fff; margin-top: 30px; margin-left: 30px;">YourDelivery</h3>
            <nav class="nav nav-masthead justify-content-center float-md-right"
                style="margin-top: 30px; margin-right: 30px;">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
                <a class="nav-link" href="/info">About Us</a>
                <% if(!currentUser) { %>
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/register">Register</a>
                    <% } else { %>
                        <form action="/logout" method="POST">
                            <a><button class="nav-link">Logout</button></a>
                        </form>
                        <!-- <a class="nav-link" href="/logout">Logout</a> -->
                        <% } %>
            </nav>
        </div>
    </header>
    <div class="login">
        <h1>Register</h1>
        <form action="/register" method="post">
            <input type="text" name="customername" placeholder="Customer/Company Name" required="required" />
            <input type="text" name="username" placeholder="User Name" required="required" />
            <input type="email" name="email" placeholder="Email" required="required" />
            <input type="password" name="password" placeholder="Password" required="required" />
            <input class="userDefine" type="checkbox" name="isUser" id="userDefine">
            <label for="userDefine" style="color: #fff;">Are you a Delivery Agent?</label>
            <button type="submit" class="btn btn-primary btn-block btn-large">Let me Join.</button>
            <p>
                <span style="color: #fff;">
                    Already have an account?
                </span>
                <b>
                    <a href="login">
                        Sign in here
                    </a>
                </b>
            </p>
        </form>
    </div>
    <!-- partial -->
